@using EventsApplication.ViewModels
@model TicketListViewModel
@{
    ViewBag.Title = "TicketList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Ticket List </h3>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Ticket number</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var t in Model.Tickets)
            {
                <tr>
                    <td>@t.FirstName</td>
                    <td>@t.LastName</td>
                    <td>@t.Email</td>
                    <td>@t.Id</td>
                </tr>
            }
    </tbody>
</table>