@model EventsApplication.ViewModel.EventFormViewModel
@{
    ViewBag.Title = Model.Title;
}

<h1>@Model.Title</h1>

@using (Html.BeginForm("Save", "Event"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Event.Name)
        @Html.TextBoxFor(m => m.Event.Name, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Event.DateOfStart)
        @Html.TextBoxFor(m => m.Event.DateOfStart, "{0:d MMM yyyy}", new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Event.DateOfEnd)
        @Html.TextBoxFor(m => m.Event.DateOfEnd, "{0:d MMM yyyy}", new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Event.Description)
        @Html.TextAreaFor(m => m.Event.Description, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Event.Location)
        @Html.TextBoxFor(m => m.Event.Location, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Event.Tickets)
        @Html.TextBoxFor(m => m.Event.Tickets, new { @class = "form-control" })
    </div>
    @Html.HiddenFor(m => m.Event.Id)
    <button type="submit" class="btn btn-primary">Save</button>

}


