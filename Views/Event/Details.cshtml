@using EventsApplication.ViewModels
@model EventDetailsViewModel

@{
    ViewBag.Title = Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Details about @Model.Name</h3>
<br />
<h4><strong>Name: @Model.Name, Date: @Model.StartDate.ToShortDateString() - @Model.EndDate.ToShortDateString()</strong></h4>
<p>Location: @Model.Location</p>
<p>Description: @Model.Description</p>
<p>Tickets left: @Model.TicketsLeft</p>
<button type="submit" class="btn">@Html.ActionLink("Buy ticket", "BuyTicket", "Ticket", new { Id = Model.Id }, null)</button>


    <button type="submit" class="btn">@Html.ActionLink("Ticket List", "TicketList", "Ticket", new { Id = Model.Id }, null)</button>

