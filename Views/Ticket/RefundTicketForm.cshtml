@using EventsApplication.ViewModels
@model RefundTicketViewModel
@{
    ViewBag.Title = "RefundTicketForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Refund ticket for </h2>

@using (@Html.BeginForm("RefundTicketSave", "Ticket"))
{
    <div class="form-group">
        @Html.LabelFor(p => p.Id)
        @Html.TextBoxFor(p => p.Id, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Id)
    </div>
    <div class="form-group">
        @Html.LabelFor(p => p.FirstName)
        @Html.TextBoxFor(p => p.FirstName, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.FirstName)
    </div>
    <div class="form-group">
        @Html.LabelFor(p => p.LastName)
        @Html.TextBoxFor(p => p.LastName, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.LastName)
    </div>
    <div class="form-group">
        @Html.LabelFor(p => p.Email)
        @Html.TextBoxFor(p => p.Email, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Email)
    </div>
    <button type="submit" class="btn">Refund Ticket</button>
}

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}

